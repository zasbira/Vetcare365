<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ModifierAnimalController"
            prefHeight="700.0" prefWidth="1000.0"
            stylesheets="/resources/css/style.css">
    <top>
        <VBox styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                <Button text="← Retour" onAction="#retourDetails"/>
                <Label text="Modifier un Animal" styleClass="header-label"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Proprietaire Info Summary -->
            <VBox styleClass="card">
                <padding>
                    <Insets top="15" right="15" bottom="15" left="15"/>
                </padding>
                <Label text="Propriétaire:" styleClass="form-label"/>
                <Label fx:id="proprietaireLabel" style="-fx-font-size: 16px;"/>
            </VBox>
            
            <!-- Edit Animal Form -->
            <VBox styleClass="card, form-container" maxWidth="600" alignment="CENTER">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>
                
                <Label text="Modifier les informations de l'Animal" styleClass="section-title" 
                       alignment="CENTER" maxWidth="Infinity"/>
                <Separator />
                
                <GridPane hgap="15" vgap="15">
                    <padding>
                        <Insets top="20" />
                    </padding>
                    
                    <Label text="Nom:" styleClass="form-label" 
                           GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="nomField" promptText="Nom de l'animal" styleClass="form-field" 
                               GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    
                    <Label text="Espèce:" styleClass="form-label" 
                           GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <ComboBox fx:id="especeComboBox" promptText="Sélectionnez une espèce" 
                              GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    
                    <Label text="Sexe:" styleClass="form-label" 
                           GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <ComboBox fx:id="sexeComboBox" promptText="Sélectionnez le sexe" 
                              GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    
                    <Label text="Âge:" styleClass="form-label" 
                           GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <Spinner fx:id="ageSpinner" 
                             GridPane.rowIndex="3" GridPane.columnIndex="1" />
                </GridPane>
                
                <HBox spacing="15" alignment="CENTER" style="-fx-padding: 30 0 0 0;">
                    <Button text="💾 Mettre à jour" onAction="#mettreAJourAnimal" defaultButton="true" />
                    <Button text="❌ Annuler" onAction="#retourDetails" styleClass="cancel-button" />
                </HBox>
            </VBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" styleClass="header">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="© 2025 VetCare 360" textFill="white"/>
        </HBox>
    </bottom>
</BorderPane>
