<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ResultatAjoutController"
            prefHeight="700.0" prefWidth="1000.0"
            stylesheets="/resources/css/style.css">
    <top>
        <VBox styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                <Button text="← Accueil" onAction="#retourAccueil"/>
                <Label text="Confirmation d'ajout" styleClass="header-label"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Success Message -->
            <VBox styleClass="card" alignment="CENTER" maxWidth="700">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>
                
                <Label text="✅ Propriétaire ajouté avec succès!" styleClass="section-title" 
                       style="-fx-font-size: 22px; -fx-text-fill: #4CAF50;"/>
                
                <Separator style="-fx-padding: 15 0 15 0;"/>
                
                <!-- Owner Information -->
                <GridPane hgap="15" vgap="10">
                    <padding>
                        <Insets top="10" bottom="20" />
                    </padding>
                    
                    <Label text="Nom:" styleClass="form-label" 
                           GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <Label fx:id="nomLabel" 
                           GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    
                    <Label text="Prénom:" styleClass="form-label" 
                           GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <Label fx:id="prenomLabel" 
                           GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    
                    <Label text="Adresse:" styleClass="form-label" 
                           GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <Label fx:id="adresseLabel" wrapText="true"
                           GridPane.rowIndex="2" GridPane.columnIndex="1" />
                    
                    <Label text="Téléphone:" styleClass="form-label" 
                           GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <Label fx:id="telephoneLabel" 
                           GridPane.rowIndex="3" GridPane.columnIndex="1" />
                </GridPane>
                
                <!-- Actions -->
                <HBox spacing="15" alignment="CENTER">
                    <Button text="📝 Modifier le propriétaire" onAction="#modifierProprietaire"/>
                    <Button text="🐾 Ajouter un animal" onAction="#ajouterAnimal"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" styleClass="header">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="© 2025 VetCare 360" textFill="white"/>
        </HBox>
    </bottom>
</BorderPane>
