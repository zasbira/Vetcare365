<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ProprietaireRechercheController"
            prefHeight="700.0" prefWidth="1000.0"
            stylesheets="/resources/css/style.css">
    <top>
        <VBox styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                <Button text="← Accueil" onAction="#retourAccueil"/>
                <Label text="Recherche Propriétaire" styleClass="header-label"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Search Form -->
            <VBox styleClass="card">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <Label text="Rechercher un propriétaire" styleClass="section-title"/>
                
                <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 15 0 15 0;">
                    <Label text="Nom:" />
                    <TextField fx:id="nomSearchField" promptText="Entrez le nom à rechercher" styleClass="search-field" HBox.hgrow="ALWAYS"/>
                    <Button text="🔍 Rechercher" onAction="#rechercherProprietaire" defaultButton="true"/>
                    <Button text="➕ Ajouter nouveau propriétaire" onAction="#ajouterNouveauProprietaire"/>
                </HBox>
            </VBox>
            
            <!-- Search Results -->
            <VBox spacing="10" VBox.vgrow="ALWAYS">
                <Label text="Résultats de la recherche" styleClass="section-title"/>
                
                <TableView fx:id="proprietairesTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="nomColumn" text="Nom" prefWidth="150" />
                        <TableColumn fx:id="prenomColumn" text="Prénom" prefWidth="150" />
                        <TableColumn fx:id="adresseColumn" text="Adresse" prefWidth="300" />
                        <TableColumn fx:id="telephoneColumn" text="Téléphone" prefWidth="150" />
                        <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200" />
                    </columns>
                    <placeholder>
                        <Label text="Aucun résultat trouvé. Utilisez le champ ci-dessus pour rechercher un propriétaire." />
                    </placeholder>
                </TableView>
            </VBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" styleClass="header">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="© 2025 VetCare 360" textFill="white"/>
        </HBox>
    </bottom>
</BorderPane>
