<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AjouterProprietaireController"
            prefHeight="700.0" prefWidth="1000.0"
            stylesheets="/resources/css/style.css">
    <top>
        <VBox styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                <Button text="← Accueil" onAction="#retourAccueil"/>
                <Label text="Ajouter un Propriétaire" styleClass="header-label"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="20" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <!-- Add Owner Form -->
            <VBox styleClass="card, form-container" maxWidth="600" alignment="CENTER">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>
                
                <Label text="Informations du Propriétaire" styleClass="section-title" 
                       alignment="CENTER" maxWidth="Infinity"/>
                <Separator />
                
                <GridPane hgap="15" vgap="15">
                    <padding>
                        <Insets top="20" />
                    </padding>
                    
                    <Label text="Nom:" styleClass="form-label" 
                           GridPane.rowIndex="0" GridPane.columnIndex="0" />
                    <TextField fx:id="nomField" promptText="Nom de famille" styleClass="form-field" 
                               GridPane.rowIndex="0" GridPane.columnIndex="1" />
                    
                    <Label text="Prénom:" styleClass="form-label" 
                           GridPane.rowIndex="1" GridPane.columnIndex="0" />
                    <TextField fx:id="prenomField" promptText="Prénom" styleClass="form-field" 
                               GridPane.rowIndex="1" GridPane.columnIndex="1" />
                    
                    <Label text="Adresse:" styleClass="form-label" 
                           GridPane.rowIndex="2" GridPane.columnIndex="0" />
                    <TextArea fx:id="adresseField" promptText="Adresse complète" styleClass="form-field" 
                              GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="3" wrapText="true" />
                    
                    <Label text="Téléphone:" styleClass="form-label" 
                           GridPane.rowIndex="3" GridPane.columnIndex="0" />
                    <TextField fx:id="telephoneField" promptText="Numéro de téléphone" styleClass="form-field" 
                               GridPane.rowIndex="3" GridPane.columnIndex="1" />
                </GridPane>
                
                <HBox spacing="15" alignment="CENTER" style="-fx-padding: 30 0 0 0;">
                    <Button text="💾 Enregistrer" onAction="#enregistrerProprietaire" defaultButton="true" />
                    <Button text="❌ Annuler" onAction="#retourAccueil" styleClass="cancel-button" />
                </HBox>
            </VBox>
        </VBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" styleClass="header">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="© 2025 VetCare 360" textFill="white"/>
        </HBox>
    </bottom>
</BorderPane>
