<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.SyntheseVisiteController"
            prefHeight="700.0" prefWidth="1000.0"
            stylesheets="/resources/css/style.css">
    <top>
        <VBox styleClass="header">
            <HBox alignment="CENTER_LEFT" spacing="20">
                <padding>
                    <Insets top="15" right="20" bottom="15" left="20"/>
                </padding>
                <Button text="← Retour" onAction="#retourDetails"/>
                <Label text="Synthèse de la Visite" styleClass="header-label"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" pannable="true">
            <VBox spacing="20">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                
                <!-- Success Message -->
                <VBox styleClass="card" alignment="CENTER">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <Label text="✅ Visite enregistrée avec succès!" styleClass="section-title" 
                           style="-fx-font-size: 22px; -fx-text-fill: #4CAF50;"/>
                </VBox>
                
                <!-- Visit Summary -->
                <VBox styleClass="card">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    
                    <Label text="Résumé de la visite" styleClass="section-title"/>
                    <Separator />
                    
                    <GridPane hgap="20" vgap="10">
                        <padding>
                            <Insets top="10" />
                        </padding>
                        
                        <columnConstraints>
                            <ColumnConstraints prefWidth="150" />
                            <ColumnConstraints prefWidth="400" />
                        </columnConstraints>
                        
                        <Label text="Propriétaire:" styleClass="form-label" 
                               GridPane.rowIndex="0" GridPane.columnIndex="0" />
                        <Label fx:id="proprietaireLabel" 
                               GridPane.rowIndex="0" GridPane.columnIndex="1" />
                        
                        <Label text="Animal:" styleClass="form-label" 
                               GridPane.rowIndex="1" GridPane.columnIndex="0" />
                        <Label fx:id="animalLabel" 
                               GridPane.rowIndex="1" GridPane.columnIndex="1" />
                        
                        <Label text="Date de la visite:" styleClass="form-label" 
                               GridPane.rowIndex="2" GridPane.columnIndex="0" />
                        <Label fx:id="dateLabel" 
                               GridPane.rowIndex="2" GridPane.columnIndex="1" />
                        
                        <Label text="Vétérinaire:" styleClass="form-label" 
                               GridPane.rowIndex="3" GridPane.columnIndex="0" />
                        <Label fx:id="veterinaireLabel" 
                               GridPane.rowIndex="3" GridPane.columnIndex="1" />
                        
                        <Label text="Description:" styleClass="form-label" 
                               GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.valignment="TOP" />
                        <Label fx:id="descriptionLabel" wrapText="true"
                               GridPane.rowIndex="4" GridPane.columnIndex="1" />
                    </GridPane>
                </VBox>
                
                <!-- Actions -->
                <HBox spacing="15" alignment="CENTER">
                    <Button text="🖨️ Imprimer" onAction="#imprimerSynthese"/>
                    <Button text="📋 Voir détails du propriétaire" onAction="#retourDetails"/>
                    <Button text="➕ Ajouter une autre visite" onAction="#ajouterAutreVisite"/>
                    <Button text="🏠 Retour à l'accueil" onAction="#retourAccueil"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" styleClass="header">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="© 2025 VetCare 360" textFill="white"/>
        </HBox>
    </bottom>
</BorderPane>
